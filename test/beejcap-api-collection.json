							"raw": "{\n  \"data\": {\n    \"username\": \"{{supplierAdminEmail}}\",\n    \"password\": \"{{supplierAdminPassword}}\",\n    \"clientId\": \"{{cognitoClientId}}\"\n  }\n}"
