							"listen": "test",
							"script": {
								"exec": [
									"if (pm.response.code === 200) {",
									"    const response = pm.response.json();",
									"    if (response.status === 'success' && response.token) {",
									"        pm.environment.set('otpAuthToken', response.token.jwt);",
									"        pm.environment.set('otpEid', response.token.eid);",
									"        pm.environment.set('otpUserRole', response.token.role);",
									"        console.log('OTP auth token saved:', response.token.jwt);",
									"    }",
									"}"
								],
